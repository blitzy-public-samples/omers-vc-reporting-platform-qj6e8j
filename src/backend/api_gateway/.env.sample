# Database Configuration
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database_name>

# API Security
API_KEY=<your_api_key>
SECRET_KEY=<your_secret_key>

# Azure Active Directory Configuration
AAD_TENANT_ID=<your_aad_tenant_id>
AAD_CLIENT_ID=<your_aad_client_id>
AAD_CLIENT_SECRET=<your_aad_client_secret>

# Logging Configuration
LOG_LEVEL=INFO

# External API Configuration
FX_RATES_API_URL=https://api.exchangerates.io/v1/latest
FX_RATES_API_KEY=<your_fx_rates_api_key>

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=<your_azure_storage_connection_string>
BACKUP_CONTAINER_NAME=database-backups

# Redis Cache Configuration
REDIS_URL=redis://<username>:<password>@<host>:<port>

# Application Settings
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings
CORS_ALLOW_ORIGINS=http://localhost:3000,https://app.omersventures.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Metrics and Monitoring
ENABLE_PROMETHEUS_METRICS=True

# Note: Ensure all placeholders are replaced with actual values before deploying to production.
# This file is crucial for the configuration of the API Gateway component and must be kept secure.